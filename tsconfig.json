{
   "compilerOptions": {
     "allowSyntheticDefaultImports": true,
     "jsx": "react",
     "module": "commonjs",
     "noImplicitAny": true,
     "outDir": "./build/",
     "preserveConstEnums": true,
     "removeComments": true,
     "sourceMap": true,
     "strict": true,
     "target": "ES6",
     "allowJs": true,
     "lib": [
       "es2015",
       "es2017",
       "dom"
     ]
   },
   "include": [
     "./src/**/**/*"
   ]
}